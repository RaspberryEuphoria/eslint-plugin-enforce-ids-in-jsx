  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}\\lib\\index.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
          "tests",
          "--recursive",
          "--require",
          "@babel/register"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
